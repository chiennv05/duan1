<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F9F9F9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xuất hóa đơn phòng"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginBottom="20dp" />

        <!-- Tên phòng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên phòng:"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_phongHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên phòng"
            android:padding="10dp" />

        <!-- Điện sử dụng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện sử dụng:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_soDien_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện (kWh)"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Giá phòng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá phòng:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_giaPhong_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="40.000.000 VND"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Tiền điện/1 kWh -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền điện (1 kWh):"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_tienDien_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3.000 VND"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền nước/1 m3:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_tienNuoc_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20.000 VND"
            android:inputType="number"
            android:padding="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền dịch vu:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_dichVu_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20.000 VND"
            android:inputType="number"
            android:padding="10dp" />



        <!-- Số người đang ở -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số người đang ở:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
        <EditText
            android:id="@+id/edt_soNguoi_hoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Nút xuất hóa đơn -->
        <Button
            android:id="@+id/btn_generate_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xuất hóa đơn"
            android:background="#4CAF50"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:padding="10dp" />
    </LinearLayout>


</LinearLayout>